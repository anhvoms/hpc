              "idleTimeoutInMinutes": 15
            },
            "Name": "httplbrule"
          },
          {
            "properties": {
              "frontendIPConfiguration": {
                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', variables('internalLBName')), '/frontendIpConfigurations/LoadBalancerFrontend')]"
              },
